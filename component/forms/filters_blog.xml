<form>
    <!-- Filters -->
    <field name="title">
        <type>text</type>
        <name>title</name>
        <id>title</id>
        <label></label>
        <placeholder>Title</placeholder>
    </field>
    <!-- buttons -->
    <button name="btn_new">
        <id>btn_new</id>
        <class>btn_new</class>
        <label>New</label>
        <icon>fa-plus</icon>
        <modal>true</modal>
        <modal_title>New Post</modal_title>
        <page>blog</page>
        <layout>new</layout>
    </button>
    <button name="btn_params">
        <id>btn_params</id>
        <class>btn_params</class>
        <label>Settings</label>
        <icon>fa-cog</icon>
        <modal>true</modal>
        <modal_title>Settings</modal_title>
        <page>blog</page>
        <layout>params</layout>
    </button>
</form>